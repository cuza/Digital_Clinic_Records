{% extends "::base.html.twig" %}

 {% block title %}
     Añadir resultado - Complementario
 {% endblock %}

{% block ContentHeader %}
    <section class="content-header">
        <h1>
            Complementario
            <small>Añadir el resultado de un complementario</small>
        </h1>
    </section>
{% endblock %}

{% block ContentBody %}

    <section class="content">

        <div class="row">
            <h2></h2>
            <div class="col-md-6 col-md-offset-3">
                <div class="box box-default box-form">

                    <h1>Resultados de complementarios</h1>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" class="btn box-btn-submit btn-info pull-right" value="Siguiente">
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function ($) {
            var $n = $("#complementario_end_cancelado"), $doa = $("#ingreso_end_estadoEgreso");
            console.log($n.attr('disabled',''));
//            $n.attr('disabled','');
            $("#ingreso_end_repercusionIncapacidadFisica").removeAttr('disabled');
            $("#ingreso_end_seguimiento").removeAttr('disabled');
            $doa.change(function(e){
//                console.log($(e.target).val()=="Fallecido");
                if($(e.target).val()=="Fallecido"){
                    $n.removeAttr('disabled');
                    $("#ingreso_end_repercusionIncapacidadFisica").val("");
                    $("#ingreso_end_seguimiento").val("");
                    $("#ingreso_end_repercusionIncapacidadFisica").attr('disabled','');
                    $("#ingreso_end_seguimiento").attr('disabled','');
                }else{
                    $n.attr('checked',false);
                    $n.attr('disabled','');
                    $("#ingreso_end_repercusionIncapacidadFisica").removeAttr('disabled');
                    $("#ingreso_end_seguimiento").removeAttr('disabled');


                }
            });
        })(jQuery);
    </script>
{% endblock %}
