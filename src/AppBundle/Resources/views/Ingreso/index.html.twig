{% extends '::base.html.twig' %}

{% block title %}
    Pacientes Ingresados
{% endblock %}

{% block ContentHeader %}
    <section class="content-header">
        <h1>
            Pacientes Ingresados
            <small>Pacientes ingresados por salas</small>
        </h1>
    </section>
{% endblock %}
{% block ContentBody %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                {% for sala in salas %}
                <div class="col-md-3">
                    <div class="box box-default collapsed-box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Expandable</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                            </div><!-- /.box-tools -->
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            The body of the box
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
                <div class="col-md-3">
            </div>
        </div>
    </section>
{% endblock %}




