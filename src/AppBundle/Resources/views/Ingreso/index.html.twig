{% extends '::base.html.twig' %}

{% block title %}
    Pacientes Ingresados
{% endblock %}

{% block ContentHeader %}
    <section class="content-header">
        <h1>
            Pacientes Ingresados
            <small>Pacientes ingresados por salas</small>
        </h1>
    </section>
{% endblock %}
{% block ContentBody %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                {% for sala in salas %}
                    <div class="col-md-3">
                        <div class="box box-default collapsed-box">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{ sala.sala.nombre }}</h3><small> {{ sala.sala.servicio }} </small>
                                <div class="box-tools pull-right">
                                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                                    </button>
                                </div><!-- /.box-tools -->
                            </div><!-- /.box-header -->
                            <div class="box-footer">
                                <ul class="nav nav-stacked">
                                        {% for ingreso in sala.ingresos %}
                                    <li>
                                            <a href="{{ path('app_ingreso_show', {'id': ingreso.id }) }}">{{ ingreso.paciente.nombre }} {{ ingreso.paciente.primerApellido }} {{ ingreso.paciente.segundoApellido }}</a>
                                    </li>
                                        {% endfor %}
                                </ul>

                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}




