{% extends '::base.html.twig' %}

 {% block title %}
     Crear - Hoja de líquidos y deposiciones
 {% endblock %}

{% block ContentHeader %}
    <section class="content-header">
        <h1>
            Hoja de líquidos y deposiciones
            <small>Crear una nueva hoja de líquidos y deposiciones</small>
        </h1>
    </section>
{% endblock %}

{% block ContentBody %}
    <section class="content">
        {% if error %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ error }}
            </div>
        {% endif %}
        <div class="row">
            <h2></h2>
            <div class="col-md-6 col-md-offset-3">
                <div class="box box-default box-form">
                    <h1>Hoja de líquidos y deposiciones</h1>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" class="btn box-btn-submit btn-info pull-right" value="Siguiente">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
